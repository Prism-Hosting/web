<%= bootstrap_form_with(model: server) do |form| %>
  <div class="row">
    <div class="col-12">
      <%= form.file_field :picture, accept: "image/*" %>
    </div>
    <div class="col-12 col-lg-6">
      <%= form.text_field :name %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.text_field :password %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.text_field :gslt, help: 'Required by Steam; Check <a href="https://t.ly/DJw-">this article</a> for more information.'.html_safe %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.text_field :rcon_password, help: "Use <code>rcon_password \"#{server.rcon_password}\"</code> in the in-game console.".html_safe %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.text_field :map %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.select :tickrate, enum_options_for_select(Server, :tickrates, server.tickrate) %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.select :game_type, enum_options_for_select(Server, :game_types, server.game_type), help: 'See the <a href="https://developer.valvesoftware.com/wiki/Counter-Strike:_Global_Offensive/Game_Modes" target="_blank">Valve Developer Community article</a> for more details.'.html_safe %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.select :game_mode, enum_options_for_select(Server, :game_modes, server.game_mode), help: 'See the <a href="https://developer.valvesoftware.com/wiki/Counter-Strike:_Global_Offensive/Game_Modes" target="_blank">Valve Developer Community article</a> for more details.'.html_safe %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.check_box :disable_bots %>
    </div>

    <div class="col-12 col-lg-6">
      <%= form.check_box :server_configs, help: "Test" %>
      <small class="form-text text-muted mt-0">Add basic server configs (kz, live, aim etc); see <a href="https://github.com/timche/csgo-server-configs#configs" target="_blank">this link</a> for more information.</small>
    </div>

    <div class="col-12 mt-4">
      <%= form.submit class: "btn btn-secondary", data: server.persisted? ? { turbo_confirm: "Updating your server configuration will restart the server. Are you sure you?" } : {} %>
    </div>
  </div>
<% end %>
