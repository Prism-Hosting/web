<% active ||= '' %>

<div data-toggle="sticky" data-sticky-offset="30" data-negative-margin=".card-profile-cover" style="margin-top: 0px;">
  <div class="card">
    <div class="card-header py-3">
      <span class="h6">Settings</span>
    </div>
    <div class="list-group list-group-sm list-group-flush">
      <%= link_to @server, class: "list-group-item list-group-item-action d-flex justify-content-between #{active == 'settings' && 'active'}" do %>
        <div>
          <%= fa_icon 'cog', class: 'mr-2' %>
          <span>Settings</span>
        </div>
        <div>
          <i class="fas fa-angle-right"></i>
        </div>
      <% end %>
      <%= link_to logs_server_path(@server), class: "list-group-item list-group-item-action d-flex justify-content-between #{active == 'logs' && 'active'}" do %>
        <div>
          <%= fa_icon 'terminal', class: 'mr-2' %>
          <span>Logs</span>
        </div>
        <div>
          <i class="fas fa-angle-right"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>
