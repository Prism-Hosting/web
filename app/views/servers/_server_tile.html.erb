<div class="col-lg-6">
  <div class="card hover-shadow-lg">
    <div class="card-header">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-0">
            <%= image_tag 'csgo.svg' %>
            Counter-Strike: Global-Offensive
          </h6>
        </div>
        <div class="text-right">
          <div class="actions">
            <a href="#" class="action-item"><i class="fas fa-sync"></i></a>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body text-center">
      <a href="#" class="avatar rounded-circle avatar-lg hover-translate-y-n3">
        <img alt="Image placeholder" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fgamepedia.cursecdn.com%2Flolesports_gamepedia_en%2F1%2F12%2FSESL_Logo.png&f=1&nofb=1&ipt=97bd2752335d3bd87398787cd64a1dca0a3b2911dfc4dcdf30bbf891783a66ea&ipo=images" class="">
      </a>
      <h5 class="my-4">
        <%= link_to server, server.name %>
      </h5>
      <div class="input-group mb-3" data-controller="clipboard">
        <input data-clipboard-target="command" type="text" class="form-control" value="connect prism-hosting.ch:28938; password pass">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button" data-action="click->clipboard#copy" title="Copy command to clipboard">
            <%= fa_icon 'copy', data: { 'clipboard-target': 'icon' } %>
          </button>
        </div>
      </div>
      <span class="clearfix"></span>
      <span class="badge badge-pill badge-soft-success">Online: 6 players connected</span>
      <div class="mt-4 pt-4 delimiter-top">
        <a href="#" class="btn btn-sm btn-light">
          <span class="btn-inner--icon"><%= fa_icon 'edit' %></span>
          Edit
        </a>
        <a href="#" class="btn btn-sm btn-warning">
          <span class="btn-inner--icon"><%= fa_icon 'stop' %></span>
          Stop
        </a>
      </div>
    </div>
  </div>
</div>
